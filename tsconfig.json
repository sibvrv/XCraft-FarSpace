{
  "compilerOptions": {
    "lib": [
      "ESNext",
      "ES6",
      "ES2015",
      "ES2020",
      "DOM"
    ],
    "moduleResolution": "Node",
    "target": "ES5",
    "module": "ESNext",
    "noImplicitAny": true,
    "strict": true,
    "baseUrl": "Source",
    "rootDir": "./Source/",
    "paths": {
      "@Application": [
        "./Application/*"
      ],
      "@Engine/*": [
        "./Engine/*"
      ],
      "@Content/*": [
        "./Content/*"
      ],
      "@Root/*": [
        "./*"
      ]
    }
  }
}
